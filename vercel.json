{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/server.js"
    }
  ],
  "functions": {
    "backend/server.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "installCommand": "cd backend && npm install",
  "buildCommand": "echo 'No build needed'"
}
